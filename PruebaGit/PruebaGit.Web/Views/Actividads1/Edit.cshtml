@model PruebaGit.Web.Models.Actividad

@{
    ViewBag.Title = "Edit";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="container">
    <div class="row justify-content-center" style="margin-top:100px">
        <div class="col-md-6 bg-primary">
            <div class="card">
                <div class="card-body">
                    <h2 class="text-center text-primary">Editar Actividad</h2>
                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)

                        <div class="form-group text-primary">
                            @Html.LabelFor(model => model.ActividadId, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ActividadId, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ActividadId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group text-center mr-3">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                                <a href="@Url.Action("Index","Home")" class="btn btn-primary">Regresar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

                    }

                  

                    @section Scripts {
                        @Scripts.Render("~/bundles/jqueryval")
                    }
