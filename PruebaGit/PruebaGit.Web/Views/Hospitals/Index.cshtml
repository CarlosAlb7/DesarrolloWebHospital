@model IEnumerable<PruebaGit.Web.Models.Hospital>

@{
    ViewBag.Title = "Index";
}


@*TABLA*@
<div class="container text-light">
    <div class="row justify-content-center">
        @*SE AGREGO EL MODAL*@
        <p class="mt-3">
            <a data-toggle="modal" data-target="#AddModal" class="nav navbar-brand text-light btn btn-primary pl-3 pr-3">Agregar hospital</a>
        </p>
    </div>
</div>
<div class="container">
    <div class="row justify-content-center">
        @*SE AGREGO EL MODAL*@
        @if (User.IsInRole("Administrador") && (User.IsInRole("Doctores")))
        {
            <p class="mt-3">
                <a data-toggle="modal" data-target="#AddModal" class="nav navbar-brand text-dark btn btn-outline-info" href="#">Agregar Hospital</a>
            </p>
        }

        </div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 bg-primary">
                <div class="card">
                    <div class="card-body">
                        <table class="table table-hover ">
                            <tr class="text-primary">
                                <th>
                                    @Html.DisplayNameFor(model => model.Numero_Hospital)
                                </th>
                                <th></th>
                            </tr>
                            @foreach (var item in Model)
                            {
                        <tr class="text-primary">
                            <td>
                                @Html.DisplayFor(modelItem => item.Numero_Hospital)
                            </td>
                            @if (User.IsInRole("Administrador"))
                            {
                                <td>
                                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning fas fa-trash text-light" }) |
                                    @Html.ActionLink("Ver", "Details", new { id = item.Id }, new { @class = "btn btn-success fas fa-eye" }) |
                                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger fas fa-trash" })
                                </td>
                            }
                            @if (User.IsInRole("Doctores"))
                            {
                                <td>
          @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning fas fa-trash text-light" }) |
          @Html.ActionLink("Ver", "Details", new { id = item.Id }, new { @class = "btn btn-success fas fa-eye" }) |
        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger fas fa-trash" })
                                </td>
                            }

                        </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


    @*MODAL*@
    <div class="modal fade" id="AddModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content text-primary">
                <div class="modal-header text-primary">
                    <h2 class="modal-title" id="exampleModalLabel">Agregar hospital</h2>    
                    <button type="button" class="close btn-danger" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="@Url.Action("Create", "Hospitals")" method="post" style="background-color:aliceblue;">
                    @Html.AntiForgeryToken()
                    <div class="modal-body" >
                        <div class="form-group">
                            <label class="col-md-6 col-form-label">
                                Nombre
                            </label>
                            <div class="col-md-10">
                                <input type="text" value="" name="Numero_Hospital" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-danger">Guardar cambios</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
