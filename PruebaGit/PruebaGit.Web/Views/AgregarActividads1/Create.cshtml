                                    @Html.DropDownList("ActividadId", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ActividadId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group text-center">
                            <input type="submit" value="Registrar Actividad" class="btn btn-primary mr-5" />
                              <a href="@Url.Action("Index", "AgregarActividads1")" class="btn btn-primary">Regresar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
     
        
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
