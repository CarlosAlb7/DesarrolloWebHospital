@model IEnumerable<PruebaGit.Web.Models.AgregarActividad>

@{
    ViewBag.Title = "Index";
}


<div class="container" style="font-family: 'Californian FB'">
    <div class="row justify-content-center">
   
        <div class="col-md-12 bg-primary">
            <div class="card">
                <div class="card-body">
                    <p class="text-center">
     @Html.ActionLink("Crear nueva actividad", "Create", "AgregarActividads1", new { @class = " btn btn-outline-light navbar-brand  bg-primary text-light" })
                    </p>
                    <table class="table table-hover">
                        <tr class="text-primary">
                            <th>
                                @Html.DisplayNameFor(model => model.Actividad.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ID_Paciente)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ID_Empleado)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Fecha)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Hora)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Actividad_Realizar)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr class="text-white">
                                <td>
                                    @Html.DisplayFor(modelItem => item.Actividad.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ID_Paciente)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ID_Empleado)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Fecha)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Hora)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Actividad_Realizar)
                                </td>
                                <td>
                                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning fas fa-trash text-light" }) |
                                    @Html.ActionLink("Ver", "Details", new { id = item.Id }, new { @class = "btn btn-success fas fa-eye" }) |
                                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger fas fa-trash" })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
