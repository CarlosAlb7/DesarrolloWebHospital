@model PruebaGit.Web.Models.Doctor

@{
    ViewBag.Title = "Delete";
}

<div class="container text-light" style="font-style:oblique; margin-top:100px; font-family:'Californian FB';">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-primary">
                <div class="card-header bg-primary">
                    <h3 class="card-title text-light">Estas seguro que quieres eliminar este egistro?</h3>
                    <div>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.Nombre_Doctor)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Nombre_Doctor)
                            </dd>

                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions">
                                <input type="submit" value="Eliminar" class="btn btn-danger" />
                                <div class="btn btn-light float-lg-right">
                                    @Html.ActionLink("Regresar al Index ", "Index")
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
