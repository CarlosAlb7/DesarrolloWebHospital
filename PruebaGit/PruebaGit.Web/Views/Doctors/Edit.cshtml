@model PruebaGit.Web.Models.Doctor

@{
    ViewBag.Title = "Edit";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container text-light" style="font-family:'Californian FB'">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card bg-primary">
                    <div class="form-horizontal">
                        <h2 class="text-center">Doctor</h2>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)

                        <div class="form-group">
                            @Html.LabelFor(model => model.Nombre_Doctor, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Nombre_Doctor, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Nombre_Doctor, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group text-center">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Guardar cambios" class="btn btn-primary" />

     
                                   <a href="@Url.Action("Index","Doctors")" class="btn btn-primary">Index</a> 
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
